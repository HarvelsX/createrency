{
  "idle": {
    "timeout": 0,
    "condition": "none"
  },
  "battery_tracker": {
    "display": {
      "placement": "top_right"
    }
  },
  "states": {
    "hovered": {
      "frame_rate_target": -1
    },
    "unfocused": {
      "frame_rate_target": 15,
      "volume_multipliers": {
        "master": 0.5
      },
      "graphics_state": "reduced"
    },
    "abandoned": {
      "frame_rate_target": -1
    },
    "invisible": {
      "frame_rate_target": -1,
      "volume_multipliers": {
        "master": 1.0
      },
      "show_toasts": true
    }
  }
}
